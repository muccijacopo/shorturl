<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=<device-width>, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
</head>
<body class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <h1>Url Shortener</h1>
    </nav>
    <form action="/shortUrls" method="POST" class="my-3 d-flex w-50 mx-auto">
        <label for="fullUrl" class="visually-hidden">Url</label>
        <input type="url" name="fullUrl" id="fullUrl" placeholder="Url" class="form-control me-3" required>
        <button type="submit" class="btn btn-info">Shrink</button>
    </form>

    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Full URL</th>
                <th>Short url</th>
                <th>Clicks</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% urls.forEach(url => { %>
                <tr>
                    <td><a href="<%= url.full %>"><%= url.full %></a></td>
                    <td><a href="<%= url.short %>"><%= url.short %></a></td>                    
                    <td><%= url.clicks %></td> 
                    <td><a href="/delete/<%= url._id %>">x</a></td>                   
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>